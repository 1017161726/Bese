<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_dialog_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_75"
        android:layout_marginRight="@dimen/px_75"
        android:background="@drawable/shape_dialog_line"
        android:backgroundTint="@color/color_fff"
        android:orientation="vertical">

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_60"/>

        <TextView
            android:id="@+id/dialog_line_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/pt_30"
            android:layout_marginEnd="@dimen/pt_30"
            android:layout_marginBottom="@dimen/px_20"
            android:gravity="center"
            android:text="Title"
            android:textStyle="bold"
            android:textColor="@color/color_333"
            android:textSize="@dimen/pt_30"/>

        <TextView
            android:id="@+id/dialog_line_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Message"
            android:textColor="@color/color_333"
            android:textSize="@dimen/pt_30"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_30"/>

        <LinearLayout
            android:id="@+id/layout_line_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/px_30"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_line_left"
                android:layout_width="0dp"
                android:layout_height="@dimen/px_80"
                android:layout_weight="1"
                android:background="@drawable/dialog_line_cancel_r6"
                android:layout_marginEnd="@dimen/px_20"
                android:gravity="center"
                android:singleLine="true"
                android:text="取消"
                android:textColor="@color/color_333"
                android:textSize="@dimen/pt_30"/>

            <TextView
                android:id="@+id/dialog_line_right"
                android:layout_width="0dp"
                android:layout_height="@dimen/px_80"
                android:layout_weight="1"
                android:background="@drawable/rct_sld_r6"
                android:backgroundTint="@color/color_0099ff"
                android:gravity="center"
                android:singleLine="true"
                android:text="确定"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/pt_30"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>