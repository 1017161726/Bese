<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_edeff2">

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/pt_30"
            android:textColor="@color/color_555"
            android:padding="@dimen/px_20"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hc"
            android:paddingStart="@dimen/px_20"
            android:paddingEnd="@dimen/px_20"
            android:text="@string/icon_app_right"
            android:textSize="@dimen/pt_32"
            android:textColor="@color/color_666"/>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:background="@color/color_ced3d9"/>
    
</LinearLayout>